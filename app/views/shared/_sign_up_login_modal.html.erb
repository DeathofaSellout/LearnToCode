<div id="modal_signup" class="modal modal-fixed-footer">
  <%= form_for @user do |f| %>
  <div class="modal-content">
    <div class="row">
      <div class="input-field col s12">
        <%= f.text_field :username %>
        <label for="username">Username, must be unique</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <%= f.password_field :password %>
        <label for="password">Password, Must be between 6 to 20 Characters</label>
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <a class="modal-action modal-close waves-effect waves-red btn-flat">Cancel</a>
    <%= f.submit "Save", class: "btn-flat"%>
  </div>
  <%end%>
</div>

<div id="modal_login" class="modal modal-fixed-footer">
  <% @user=User.new %>
  <%= form_for @user, url: "/sessions", method: "post" do |f| %>
  <div class="modal-content">
    <div class="row">
      <div class="input-field col s12">
        <%= f.email_field :username, placeholder: "UserName" %>
        <label for="UserName">UserName</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <%= f.password_field :password, placeholder: "Password" %>
        <label for="password">Password</label>
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <a class="modal-action modal-close waves-effect waves-red btn-flat">Cancel</a>
    <%= f.submit "Login", class: "btn-flat" %>
  </div>
  <% end %>
</div>
